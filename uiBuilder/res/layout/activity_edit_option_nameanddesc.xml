<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/project_edit_nameanddesc_root"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    
			    android:background="@android:color/white"
			    android:orientation="vertical"
			    android:padding="@dimen/default_padding_large"
			    >
				<TextView android:id="@+id/project_edit_nameanddesc_header"
				    
				    style="@style/editbox_header"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:text="Update your app details" />		    
    
			    <LinearLayout 
			        android:layout_width="match_parent" android:layout_height="match_parent"
			        android:layout_margin="@dimen/default_padding_large"
			        android:orientation="vertical"
			        >
			        <TextView android:padding="@dimen/default_padding_small"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:text="Edit your app name" />

					<EditText android:id="@+id/project_edit_nameanddesc_projectname"
					    android:layout_margin="@dimen/default_padding_small"
						android:layout_width="match_parent" android:layout_height="wrap_content" />
					
					<TextView android:padding="@dimen/default_padding_small"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
	
						android:text="Edit your project description" />
	
					<EditText android:id="@+id/project_edit_nameanddesc_description"
					    android:layout_margin="@dimen/default_padding_small"
						android:layout_width="match_parent" android:layout_height="wrap_content" 
						android:layout_marginBottom="@dimen/default_padding_large"
						/>
					
					<Button android:id="@+id/project_edit_nameanddesc_submit"
					    style="@style/itembox_items_inverted"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    
					    android:padding="@dimen/default_padding_large"
					    android:layout_margin="@dimen/default_padding_large"
					    
					    android:layout_gravity="center_horizontal"
					    android:text="Save changes"
					    />
			        
			    </LinearLayout>
			    
			    
			</LinearLayout>