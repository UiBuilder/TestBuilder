<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/project_edit_nameanddesc_root"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    
			    android:background="@android:color/white"
			    android:orientation="vertical"
			    android:padding="@dimen/default_padding_large"
			    >
				<TextView android:id="@+id/project_edit_screens_header"
				    
				    style="@style/editbox_header"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:text="Update your screen titles and descriptions" />		    
    
			    <RelativeLayout 
			        android:layout_width="match_parent" android:layout_height="match_parent"
			        android:layout_margin="@dimen/default_padding_large"

			        >
			        
			        
			        
			        <ListView android:id="@+id/project_edit_screens_screenlist"
			            
			            android:padding="@dimen/default_padding_large"
			            android:layout_margin="@dimen/default_padding_large"
			            android:layout_width="match_parent" android:layout_height="match_parent"
						android:layout_alignParentTop="true"
						
						android:choiceMode="singleChoice"
			            />
				    
			        
			    </RelativeLayout>
			    
			    
			</LinearLayout>