<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/project_edit_optionsscreen_page"
			    android:background="@android:color/white"
				android:layout_height="match_parent" android:layout_width="match_parent"

				android:padding="@dimen/default_padding_large" android:orientation="vertical">

				<TextView android:id="@+id/project_edit_optionsscreen_header"
				    
				    style="@style/editbox_header"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:text="Edit Project Properties" />

				<ListView android:id="@+id/project_edit_optionsscreen_optionslist"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:padding="@dimen/default_padding_large"
				    android:layout_margin="@dimen/default_padding_large"
				    
				    android:choiceMode="singleChoice"
				    >
				    
				</ListView>


			</LinearLayout>