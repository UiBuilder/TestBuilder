<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"

	android:background="@color/designfragment_background"
	>
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_centerInParent="true"
		android:orientation="horizontal" android:weightSum="1"
		android:padding="@dimen/default_padding_large"
		>
		<View android:layout_width="0dp" android:layout_height="match_parent"

			android:layout_weight="0.1" />
		
		<include layout="@layout/activity_edit_project_optionslist"
			    android:layout_height="match_parent" android:layout_width="0dp"
			    android:layout_weight="0.3"
			    android:background="@color/superlight_grey"
				android:padding="@dimen/default_padding_medium"
			    />


		<ViewFlipper android:id="@+id/project_edit_flipper"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_weight="0.5" 
			android:padding="@dimen/default_padding_medium">

			
			<include layout="@layout/activity_edit_option_nameanddesc"
			    android:layout_width="match_parent" android:layout_height="match_parent"
			    />
			
			<TextView 
			    android:layout_width="match_parent" android:layout_height="match_parent"
			    android:text="placeholder"
			    />
			
			<include layout="@layout/activity_edit_option_screens_choose"
			    android:layout_width="match_parent" android:layout_height="match_parent"
			    
			    />
			
			<TextView 
			    android:layout_width="match_parent" android:layout_height="match_parent"
			    android:text="placeholder"
			    />
			
			
			<include layout="@layout/activity_edit_option_screens_edit"
			    android:layout_width="match_parent" android:layout_height="match_parent"
			    
			    />

		</ViewFlipper>

		<View android:layout_width="0dp" android:layout_height="match_parent"

			android:layout_weight="0.1" />


	</LinearLayout>


</RelativeLayout>