<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding_large" >

    <TextView
        android:id="@+id/activity_manager_new_screen_caption"
        style="@style/itembox_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_caption_create" />

    <LinearLayout
        android:id="@+id/newscreen_namebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/activity_manager_new_screen_caption"
        android:layout_alignRight="@id/activity_manager_new_screen_caption"
        android:layout_below="@id/activity_manager_new_screen_caption"
        android:background="@color/editbox_item_background_normal"
        android:orientation="vertical"
        android:padding="@dimen/default_padding_medium" >

        <EditText
            android:id="@+id/activity_manager_new_screen_name"
            android:background="@drawable/textfield_activated_holo_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:hint="@string/manager_screenname_edittext"
            android:imeOptions="actionDone|flagNoFullscreen"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/new_screen_button"
            style="@style/itembox_items_inverted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/manager_new_screen_button_text"
            android:textAllCaps="true" />
    </LinearLayout>

</RelativeLayout>