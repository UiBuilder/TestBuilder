<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	>
    
    <TextView android:id="@+id/activity_manager_new_screen_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_alignParentTop="true"
        
        android:text="@string/manager_caption_create"
        style="@style/itembox_header"
        />
    
    <EditText 
        android:id="@+id/activity_manager_new_screen_name"
        android:hint="Enter screen name"
        android:inputType="text"
        
        android:layout_below="@id/activity_manager_new_screen_caption"
        android:layout_alignParentLeft="true"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <Button 
        android:id="@+id/new_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@id/activity_manager_new_screen_caption"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/activity_manager_new_screen_name"
        
        android:text="new"
       />


</RelativeLayout>