<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 

	android:padding="@dimen/default_padding_large"
    android:background="@android:color/white"
    >
    
   
    
    <LinearLayout android:id="@+id/preferences_cloud_account_signedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:padding="@dimen/default_padding_large"
       	android:layout_margin="@dimen/default_padding_large"
        
		android:layout_centerInParent="true"
		android:gravity="center_horizontal"
        
        android:orientation="vertical"
        >
        
        <TextView style="@style/editbox_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_gravity="center_horizontal"
        
        android:text="You are signed in"
        />
    
   		<TextView style="@style/editbox_sub"
   		    android:id="@+id/preferences_cloud_account_status"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	
        	android:padding="@dimen/default_padding_large"
        	android:layout_margin="@dimen/default_padding_large"
        	/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Want to switch account?"
            />
        
        
        <Button android:id="@+id/preferences_cloud_account_signedin_signout_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Sign out"
            
            style="@style/itembox_items_inverted"
            android:layout_margin="@dimen/default_padding_large"
            />
        
        
    </LinearLayout>
    

</RelativeLayout>