<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical"
    
    
    
    android:padding="@dimen/default_padding_medium"

    >
    
    <Button 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        
	        android:text="X"
	        android:layout_gravity="right"
	        android:background="@android:color/transparent"
	        android:textColor="@color/element_out_of_dropzone"
	        />
    
	    <LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"
	        android:background="@color/superlight_grey"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        android:layout_marginTop="0dp"
	        android:orientation="horizontal"
	         >
	    <TextView 
	        android:layout_width="200dp"
	        android:layout_height="match_parent"
	        
	        android:id="@+id/project_manager_list_item_test"
	        android:text="testproject"
	        />
	    
	   	<LinearLayout 
	        android:layout_width="400dp"
	        android:layout_height="wrap_content"
	        
	        android:orientation="vertical"
	        
	        >
	        <TextView style="@style/editbox_header"
	            
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            
	            android:id="@+id/project_manager_display_project_title"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_display_project_date"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_display_project_description"
	            />
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_list_item"
	            />
	
	    </LinearLayout>
	    
	   	<ListView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            
	            android:id="@+id/project_manager_list_item_sections"
	            ></ListView>
	    
	</LinearLayout>
	
	    

</LinearLayout>
