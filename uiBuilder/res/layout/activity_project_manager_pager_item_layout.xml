<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="horizontal"
    
    
    
    android:padding="@dimen/default_padding_medium"

    >
	    <LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"
	        android:background="@color/superlight_grey"
	        android:layout_margin="30dp"
	        android:orientation="horizontal"
	         >
	    <TextView 
	        android:layout_width="200dp"
	        android:layout_height="match_parent"
	        
	        android:id="@+id/project_manager_list_item_test"
	        android:text="testproject"
	        />
	    
	   	<LinearLayout 
	        android:layout_width="400dp"
	        android:layout_height="wrap_content"
	        
	        android:orientation="vertical"
	        
	        >
	        <TextView style="@style/editbox_header"
	            
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            
	            android:id="@+id/project_manager_list_item_title"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_list_item_date"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_list_item_section_name"
	            />
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:id="@+id/project_manager_list_item_numberofscreens"
	            />
	
	    </LinearLayout>
	    
	   	<ListView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            
	            android:id="@+id/project_manager_list_item_sections"
	            ></ListView>
	    
	</LinearLayout>

</LinearLayout>
