<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="horizontal" 

	android:background="@android:color/white"
    >
    
	<TextView 
	    android:id="@+id/project_manager_list_item_sections_header"
	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_gravity="left|center_vertical"
	    style="@style/editbox_header"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:orientation="horizontal"
	    
	    android:padding="@dimen/default_padding_medium"
	    android:paddingRight="@dimen/default_padding_large"
	    >
	    
	    <Button android:id="@+id/project_manager_list_item_sections_newScreen"
	        
	        style="@style/itembox_items_inverted"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    
	    android:layout_gravity="right|center_vertical"
	    android:text="New Screen"
	    />
	    
	</LinearLayout>
	
</LinearLayout>