<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" 
	android:padding="@dimen/default_padding_medium"
    >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    
	    >
	    <TextView android:id="@+id/screens_screenlist_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/background_red"
	        
	        android:gravity="center_horizontal"
	        android:textSize="22sp"
	        android:text="Screens"
        />
	    
	    <Button android:id="@+id/project_manager_list_item_sections_newScreen"
	        
	        style="@style/itembox_items_inverted"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_margin="@dimen/default_padding_medium"
		    
		    android:text="New Screen"
		    android:textColor="@color/superlight_grey"
	    />
	    
	    
	</LinearLayout>
	
</LinearLayout>