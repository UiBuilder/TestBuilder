<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding_small"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content"        
        >
    
		<TextView android:id="@+id/userlist_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    android:padding="@dimen/default_padding_large"
		    style="@style/editbox_sub"
		    
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    />
		
		<Button android:id="@+id/userlist_delete"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    android:text="Remove"
		    
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    
		    style="@style/itembox_items_inverted"
		    
		    />
	</RelativeLayout>
</LinearLayout>