<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp" 
    
    >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding_small"
        >
        <RelativeLayout android:id="@+id/grid_manager_grid_item_color"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@color/element_out_of_dropzone"
        	android:padding="@dimen/default_padding_medium"
            >
    
			<TextView android:id="@+id/grid_manager_grid_item_title"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:padding="@dimen/default_padding_medium"
			    android:textSize="25sp"
			    android:textColor="@color/designfragment_background"
			    android:background="@color/superlight_grey"
			    />
			
			<TextView android:id="@+id/grid_manager_grid_item_description"
			    android:padding="@dimen/default_padding_medium"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/grid_manager_grid_item_title"
			    android:background="@color/superlight_grey"
			    android:textColor="@color/designfragment_background"
			    android:textSize="16sp"
			    />
		</RelativeLayout>
	</FrameLayout>
</RelativeLayout>