<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding_medium"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/default_button_border"
    >
    <TextView android:id="@+id/checkbox_caption_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:gravity="center_vertical"
		android:layout_weight="0.5"
        android:text="@string/checkbox_caption_default"
        style="@style/default_fontsizes" 
        />
    
	<CheckBox
        android:enabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"

        android:checked="true"
        android:layout_gravity="center_vertical|right"
        android:gravity="center_vertical"
        />

        </LinearLayout>