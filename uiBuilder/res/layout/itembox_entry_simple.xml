<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/designfragment_background"
    android:padding="@dimen/default_padding_medium"
    >

    <TextView android:id="@+id/itembox_entry_simple_title"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:text="@string/itembox_simple_title"
        style="@style/itembox_header"
        />
    
    <TableLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itembox_entry_simple_title"
        
        >
        <TableRow 
            android:orientation="horizontal"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:weightSum="3"
			
            >
            <LinearLayout android:id="@+id/element_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                
                android:layout_weight="1"
               	style="@style/itembox_items"
               	android:orientation="vertical"
             	>
             	
		        <ImageButton
		            android:src="@raw/ui_builder_icon_button"
		            android:scaleType="centerInside"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"  
		        
		            style="@style/itembox_items"
		            />
		        
		        <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/itembox_simple_element_caption_button" 
		            android:gravity="center_horizontal"
		            />
		        
	        </LinearLayout>
	        <LinearLayout android:id="@+id/element_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
               	style="@style/itembox_items"
               	android:orientation="vertical"
             	>
		        <ImageButton
		            android:src="@raw/ui_builder_icon_textfield"
		            android:scaleType="centerInside"
		            
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="1"
		            style="@style/itembox_items"
		            />
		        <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/itembox_simple_element_caption_textview" 
		            android:gravity="center_horizontal"
		            
		            />
	        </LinearLayout>
	        
	        <LinearLayout android:id="@+id/element_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                
                android:layout_weight="1"
               	style="@style/itembox_items"
               	android:orientation="vertical"
             	>
		         <ImageButton
		            android:src="@raw/ui_builder_icon_image"
		            android:scaleType="centerInside"
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="1"

		            style="@style/itembox_items"
		            />
		         
		         <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/itembox_simple_element_caption_imageview" 
			        android:gravity="center_horizontal"
		            />
	        </LinearLayout>
             
        </TableRow>
        
        <TableRow 
            android:orientation="horizontal"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:weightSum="3"

            >
	        <LinearLayout android:id="@+id/element_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                
                android:layout_weight="1"
               	style="@style/itembox_items"
               	android:orientation="vertical"
             	>
             	
		        <ImageButton 
		            android:src="@raw/ui_builder_icon_edittext"
			        android:scaleType="centerInside"
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
					android:layout_weight="1"
		            style="@style/itembox_items"
		            />
		        
		        <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/itembox_simple_element_caption_edittext" 
		            android:gravity="center_horizontal"
		            />
	       	</LinearLayout>



            
       	 </TableRow>
        
        
    </TableLayout>

</RelativeLayout>
