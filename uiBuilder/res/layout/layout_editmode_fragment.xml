<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_editbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    
    android:orientation="vertical"
    android:padding="10dp" >

    <include
        android:id="@+id/editmode_included_order"
        layout="@layout/editmode_entry_z_order"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_text"
        layout="@layout/editmode_entry_enter_text"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_align_content"
        layout="@layout/editmode_entry_align_content"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_choose_picture"
        layout="@layout/editmode_entry_choose_picture"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_changesize"
        layout="@layout/editmode_entry_text_size"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_nothing"
        layout="@layout/editmode_entry_nothing"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_choose_icon"
        layout="@layout/editmode_entry_choose_icon"
        android:visibility="gone" />

    <include
        android:id="@+id/editmode_included_star_count"
        layout="@layout/editmode_entry_stars_count"
        android:visibility="gone" />
    
    <include 
        android:id="@+id/editmode_included_list_config"
        layout="@layout/editmode_entry_choose_list_config"
        android:visibility="gone"
        />
	
    <include 
        android:id="@+id/editmode_included_grid_config"
        layout="@layout/editmode_entry_choose_grid_config"
        android:visibility="gone"
        />
    
    <include 
        android:id="@+id/editmode_included_grid_columns"
        layout="@layout/editmode_entry_choose_grid_columns"
        android:visibility="gone"
        />
    
    <include 
        android:id="@+id/editmode_included_grid_content"
        layout="@layout/editmode_entry_choose_content"
        android:visibility="gone"
        />
    
    <include 
        android:id="@+id/editmode_included_background_color"
        layout="@layout/editmode_entry_set_background"
        android:visibility="gone"/>/

</LinearLayout>