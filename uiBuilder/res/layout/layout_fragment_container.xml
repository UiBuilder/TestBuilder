<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" 
    android:background="@color/designfragment_background"
    android:splitMotionEvents="true"
    android:id="@+id/uibuilder_activity_root"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fragment_sidebar"
        android:layout_width="350dp"
        android:layout_height="match_parent"
         />

    <FrameLayout
        
        android:id="@+id/fragment_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/fragment_sidebar"
         />
    
    <TextView android:id="@+id/message_badge"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/message_badge"
	        android:layout_marginLeft="@dimen/default_padding_small"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:layout_margin="@dimen/default_padding_large"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="1"
	        android:textColor="@color/designfragment_background"
	        android:visibility="gone"
	        />

</RelativeLayout>