<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/itembox_layout	"
    >
    
    <Button android:id="@+id/new_element_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="neuer Button"
        />
    
    <Button android:id="@+id/new_element_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="neues Textview"
        />
    
    <Button android:id="@+id/new_element_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="neus Bildl"
        />
    
    <Button android:id="@+id/new_element_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="neues Edittext"
        />

</LinearLayout>