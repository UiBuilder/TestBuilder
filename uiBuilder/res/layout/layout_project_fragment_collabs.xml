<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/designfragment_background"
    
     >
    
    <TextView android:id="@+id/user_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/designfragment_background"
        android:textSize="25sp"
        android:paddingLeft="@dimen/default_padding_small"
        android:paddingRight="@dimen/default_padding_small"
        />
    
    <LinearLayout android:id="@+id/collabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        >
        
       	<TextView android:id="@+id/members"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        
        android:textColor="@color/background_red"
        android:textSize="16sp"
        android:text="Members: "
        /> 
        <RelativeLayout 
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    >
       	    
       	    
	       	<LinearLayout android:id="@+id/collablayout"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:orientation="horizontal"
	       	    />

       	 </RelativeLayout> 
       	 
       	    
       	</LinearLayout>


</LinearLayout>