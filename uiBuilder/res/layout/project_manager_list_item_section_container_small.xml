<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    
    android:layout_margin="@dimen/default_padding_medium"
    android:layout_marginBottom="@dimen/default_padding_medium"
    android:padding="@dimen/default_padding_small"
    
    android:background="@drawable/single_select_list_states"
    >
    <TextView style="@style/editbox_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/project_manager_list_item_section_container_name"
        
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding_small"
        
        android:layout_gravity="center_vertical"
        android:id="@+id/project_manager_list_item_section_container_description"
        
        />
    

</LinearLayout>