<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="default_overlay_handle_dimension">35dp</dimen>

    
    <item name="overlay_alpha" format="float" type="dimen">0.8</item>
    
    <dimen name="border_width_thin">1dp</dimen>
    <dimen name="border_radius_small">4dp</dimen>
    
    <!-- Min Dimensions for elements expressed as factors-->
    
    <!-- button -->
    <item name="button_factor_width" format="integer" type="integer">3</item>
    <item name="button_factor_height" format="integer" type="integer">2</item>
    
    <!-- textview -->
    <item name="textview_factor_width" format="integer" type="dimen">4</item>
    <item name="textview_factor_height" format="integer" type="dimen">2</item>
    
    <!-- edittext -->
    <item name="edittext_factor_width" format="integer" type="dimen">5</item>
    <item name="edittext_factor_height" format="integer" type="dimen">2</item>
    
    <!-- imageview -->
    <item name="image_factor_width" format="integer" type="dimen">3</item>
    <item name="image_factor_height" format="integer" type="dimen">3</item>
    
    
    
    <!-- paddings -->
    <dimen name="default_padding_small">5dp</dimen>
    <dimen name="default_padding_medium">10dp</dimen>
    <dimen name="default_padding_large">15dp</dimen>
    
    <!-- textsizes -->
    <dimen name="font_size_small">14sp</dimen>
    
</resources>