<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="default_fontsizes" parent="@android:style/TextAppearance">
        
        <item name="android:textColor">@color/text_dark</item>
    </style>
    
    <style name="editbox_header" parent="@style/default_fontsizes">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:typeface">sans</item>
        
        
    </style>
    
    <style name="itembox_items" parent="@style/default_fontsizes">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ui_itembox_button_states</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">1dp</item>
		<item name="android:padding">0dp</item>
    </style>
    
    <style name="editbox_header_inverted" parent="@style/itembox_items">
        <item name="android:background">@color/superlight_grey</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:padding">@dimen/default_padding_small</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>